			<!-- Heading -->
			<div class="panel-heading">
				<h2>Lesson 1</h2>
			</div>
			<!-- Body -->
			<div class="panel-body">
				<!-- Description -->
				<p>Basic Tips on Investing</p>
				<!-- Carousel -->
				<div id="lesson-one" class="carousel slide" data-ride="carousel">
  				<!-- Indicators -->
					<!-- There are 5 slides per carousel!
							 since each lesson should (hypothetically) have 5 sections -->
  				<ol class="carousel-indicators">
    				<li data-target="#lesson-one" data-slide-to="0" class="active"></li>
    				<li data-target="#lesson-one" data-slide-to="1"></li>
    				<li data-target="#lesson-one" data-slide-to="2"></li>
						<li data-target="#lesson-one" data-slide-to="3"></li>
						<li data-target="#lesson-one" data-slide-to="4"></li>
  				</ol>
					<!-- Wrapper for slides -->
  				<div class="carousel-inner">
    				<div class="item active">
      				<img src="..." alt="...">
      				<div class="carousel-caption">
        				...
      				</div>
    				</div>
    				<div class="item">
      				<img src="..." alt="...">
      				<div class="carousel-caption">
        				...
      				</div>
    				</div>
    					...
  				</div>
  				<!-- Carousel Controls -->
					<!-- The button format is not important right now! -->
					<!-- However, for the education section, buttons are how we show progress,
							 so styling them will be a priority for next assignments. -->
  				<a class="left carousel-control" href="#lesson-one" role="button" data-slide="prev">
    				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    				<span class="sr-only">Previous</span>
  				</a>
  				<a class="right carousel-control" href="#lesson-one" role="button" data-slide="next">
    				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    				<span class="sr-only">Next</span>
  				</a>
				</div>
			</div>
