<html>
<head>
	<title>$tonks - Education</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Bootstrap -->
	<!-- This is version 3.4.1! -->
	<link href="css/stonks.css" rel="stylesheet">
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/boostrap-theme.css" rel="stylesheet">
	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
</head>

<!-- Main Page -->
<body>
	<!-- Heading -->
	<div class="container-fluid">
		<div class="jumbotron">
			<h1 class="stonks">$tonks</h1>
			<p class="stonks">Taking You to the Moon<br>
				 								One Lesson at a Time<br>
												Or Whatever Works Best For You</p>
		</div>
	</div>
	<!-- Heading End -->

	<!-- Education -->
	<div class="panel-group">
		<!-- Lesson 1: Basic Tips on Investing-->
		<!-- This is Panel 1! -->
		<div class="panel panel-default" id="Review">
			<!-- Heading -->
			<div class="panel-heading">
				<h2>Lesson 1</h2>
			</div>
			<!-- Body -->
			<div class="panel-body">
				<!-- Description -->
				<p>Investing Basics</p>
				<!-- Carousel -->
				<div id="lesson-one-graph" class="carousel slide" data-ride="carousel">
  				<!-- Indicators -->
					<!-- There are 5 slides per carousel!
							 since each lesson should (hypothetically) have 5 sections -->
  				<ol class="carousel-indicators">
    				<li data-target="#lesson-one-graph" data-slide-to="0" class="active"></li>
    				<li data-target="#lesson-one-graph" data-slide-to="1"></li>
    				<li data-target="#lesson-one-graph" data-slide-to="2"></li>
						<li data-target="#lesson-one-graph" data-slide-to="3"></li>
						<li data-target="#lesson-one-graph" data-slide-to="4"></li>
  				</ol>
					<!-- Wrapper for slides -->
  				<div class="carousel-inner">
    				<div class="item active">
      				<img class="carousel-image" src="images/investing.jpg" alt="investing art">
      				<div class="carousel-caption">
        				<p>Investing Introduction</p>
      				</div>
    				</div>
						<!-- The remaining .item elements can be turned into a handlebars loop! -->
						<!-- See the template I e-mailed -->
    				<div class="item">
      				<img class="carousel-image" src="images/stocks.jpg" alt="stocks">
      				<div class="carousel-caption">
        				<p>Stocks</p>
      				</div>
    				</div>
						<div class="item">
      				<img class="carousel-image" src="images/strategies.jpg" alt="investing strategies">
      				<div class="carousel-caption">
        				<p>Investing Strategies</p>
      				</div>
    				</div>
						<div class="item">
      				<a href="/lesson-1-graph">
								<img class="carousel-image" src="images/graph.jpeg" alt="graph">
							</a>
      				<div class="carousel-caption">
        				<p>Investing Tools: The Graph</p>
      				</div>
    				</div>
						<div class="item">
      				<img class="carousel-image" src="images/newspaper.jpeg" alt="news">
      				<div class="carousel-caption">
        				<p>Investing Tools: News</p>
      				</div>
    				</div>
  				</div>
  				<!-- Carousel Controls -->
					<!-- The button format is not important right now! -->
					<!-- However, for the education section, buttons are how we show progress,
							 so styling them will be a priority for next assignments. -->
  				<a class="left carousel-control" href="#lesson-one-graph" role="button" data-slide="prev">
    				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    				<span class="sr-only">Previous</span>
  				</a>
  				<a class="right carousel-control" href="#lesson-one-graph" role="button" data-slide="next">
    				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    				<span class="sr-only">Next</span>
  				</a>
				</div>
			</div>
		</div>
		<!-- End of Panel 1 -->

	</div>
	<!-- End of Dashboard -->

	<!-- Navbar -->
	<nav class="navbar navbar-fixed-bottom">
		<div class="container-fluid">
			<ul class="nav nav-tabs nav-justified">
				<!-- Active denotes what page a user is currently on! -->
				<!-- The list below may be a handlebars loop! -->
				<li>
    			<a href="/home">Home</a>
  			</li>
				<li class="active">
    			<a href="/education">Education</a>
  			</li>
				<li>
    			<a href="/investing">Investing</a>
  			</li>
				<li>
    			<a href="/profile">Profile</a>
  			</li>
				<li>
					<a href="/support">Support</a>
				</li>
    	</ul>
		</div>
	</nav>
</body>
</html>
